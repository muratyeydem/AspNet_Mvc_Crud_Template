@using AspNet_Mvc_Crud_Template.Models.Entities
@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h1>Edit</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label">Category Name:</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">Picture:</label>
                    <br />
                    @if (Model.Picture != null && Model.Picture.Length > 0)
                    {
                        string imageBase64 = Convert.ToBase64String(Model.Picture);
                        string imageSrc = $"data:image/png;base64,{imageBase64}";
                        <img src="@imageSrc" alt="Resim" style="width: 100px; height: 100px;">
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                    <br />
                    <input type="file" id="picture" name="picture" class="form-control" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
